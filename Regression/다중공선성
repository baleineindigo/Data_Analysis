 모델링\n","model_bst=sm.OLS(np.log(bst_y),bst_x)\n","result_bst=model_bst.fit()\n","print(result_bst.summary())"],"execution_count":null,"outputs":[]},{"cell_type":"code","metadata":{"id":"PVDJhI_3jDRi"},"source":["cols=[]\n","for i in range(len(result_bst1.pvalues)):\n","    if result_bst1.pvalues[i]<0.05:\n","        cols.append(result_bst1.pvalues.index[i])\n","\n","cols=list(set(cols))\n","model_bst1 = sm.OLS(np.log(bst_y), bst_x[cols])\n","result_bst1 = model_bst1.fit()\n","print(result_bst1.summary())\n"],"execution_count":null,"outputs":[]},{"cell_type":"code","metadata":{"id":"b2JSwHePonbR"},"source":[""],"execution_count":null,"outputs":[]},{"cell_type":"code","metadata":{"id":"dnb8nvkOjPlk"},"source":[""],"execution_count":null,"outputs":[]}]}